<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment" android:id="@+id/fragment_registration">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/moduloSwipe_Registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-84dp"
            tools:layout_editor_absoluteX="0dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/moduloScroll_Registration">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/registrationRecycler_Registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="222dp"
                    tools:layout_editor_absoluteY="169dp"
                    tools:listitem="@layout/item_list_registration"
            />

        </ScrollView>

        <ProgressBar
                android:id="@+id/pgbModulos_Registration"
                style="?android:attr/progressBarStyle"
                android:layout_width="117dp"
                android:layout_height="78dp"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="250dp"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>